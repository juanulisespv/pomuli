{
  "manifest_version": 3,
  "name": "Pomodoro Timer Extension",
  "version": "1.0.0",
  "description": "Una extensión Pomodoro con seguimiento de proyectos y estadísticas",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "sidePanel"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "action": {
    "default_title": "Abrir Pomodoro Timer",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
